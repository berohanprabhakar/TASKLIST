<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form px-10 py-10 text-white">
            <form action="/create" method="post">
                <input  class="block  w-full rounded-md outline-none px-5 py-2 bg-zinc-700" type="text" placeholder="Title goes here" name="tasktitle">
                <textarea name="desc" class="block w-full rounded-md outline-none mt-2 px-5 py-2 bg-zinc-700 resize-none" placeholder="Description.."></textarea>
                <input class="mt-2 bg-blue-600 rounded-md px-5 py-2" type="submit" value="Create Task">
            </form>
        </div>

        <div class = "tasks flex gap-3 flex-wrap px-10 py-2">
        <% if(files.length > 0){ %>
            <% files.forEach(function(val){ %>
                <div class="task w-72 rounded-md bg-zinc-800 px-5 py-4">
                    <h1 class="text-white text-3xl">Some task here</h1>
                    <a class="text-blue-600 in" href="">Read more</a>
                </div>
            <% }) %>

        <% } else { %>
            <h2 class="text-zinc-600 ">No files yet..</h2>

        <% } %>
        
        </div>

    </div>
</body>
</html> 